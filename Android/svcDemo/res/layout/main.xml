<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center|top"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="第1种 started service"
        android:textColor="#000000" />

    <Button
        android:id="@+id/startsvc"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="启动started服务" />

    <Button
        android:id="@+id/stopsvc"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="关闭started服务" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="第2种 bind service"
        android:textColor="#000000" />

    <Button
        android:id="@+id/startbindsvc"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="启动bind服务" />

    <Button
        android:id="@+id/stopbindsvc"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="关闭bind服务" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="第3种 intent service"
        android:textColor="#000000" />

    <Button
        android:id="@+id/startintentsvc"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="启动intent服务" />

</LinearLayout>